<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/search_bar.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&family=Quicksand:wght@700&display=swap" rel="stylesheet">
    <title>404</title>

</head>
<header class="top-bar">


</header>

<body>
    <%- include ("fragments/navbar") %>
        <%- include ("fragments/search_bar") %>
            <div class="container d-flex justify-content-center">
                <div class="card flex-row flex-wrap">
                    <div class="card-img-top d-inline-flex align-items-center " alt="Foto de perfil ">
                        <div class=profile_basic>
                            <% if (_user.image){ %>
                                <img class="img-fluid " src="/users/imagen/<%= _user.id %>" alt="Foto de perfil ">
                                <% }  %>
                        </div>
                        <h3 class="col p-1 m-0 ">
                            ¡Hola
                            <%= _user.name %>!
                        </h3>
                        <span creation-date>Miembro desde <%= _user.date %></span>
                    </div>
                    <div class=card-body d-flex justify-content-center>
                        <h3 class="text-center">Stats</h3>
                        <div class="row justify-content-center">
                            <div class="col-sm-3">
                                <p class="text-center">Preguntas</p>
                                <p class="text-center">10</p>
                            </div>
                            <div class="col-sm-3">
                                <p class="text-center">Reputación</p>
                                <p class="text-center">
                                    <%= _user.reputation %>
                                </p>
                            </div>
                            <div class="col-sm-3">
                                <p class="text-center">Respuestas</p>
                                <p class="text-center">10</p>
                            </div>
                        </div>
                        <h3 class="text-center">Medallas</h3>
                        <div class="row justify-content-center">
                            <div class="col-sm-3">
                                <p class="text-center" id="oro">Oro</p>
                                <p class="text-center">
                                    <% if ( golds) { %>
                                        <p class="text-center">
                                            <%= golds.length%>
                                        </p>
                                        <% }else{ %>
                                            <p class="text-center">0</p>
                                            <%   } %>

                                </p>
                                <% if (golds && golds.length) { %>
                                    <ul>
                                        <% golds.forEach((item) => { %>
                                            <li>
                                                <%= item.name %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                    <% } %>
                            </div>
                            <div class="col-sm-3">
                                <p class="text-center" id="plata">Plata</p>
                                <p class="text-center">
                                    <% if ( silvers) { %>
                                        <p class="text-center">
                                            <%= silvers.length%>
                                        </p>
                                        <p class="text-center"></p>

                                        <%}else{ %>
                                            <p class="text-center">0</p>
                                            <%   } %>

                                </p>


                                <% if (silvers && silvers.length) { %>
                                    <ul>
                                        <% silvers.forEach((item) => { %>
                                            <li>
                                                <%= item.name %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                    <% } %>

                            </div>
                            <div class="col-sm-3">
                                <p class="text-center" id="bronce">Bronce</p>
                                <p class="text-center">
                                    <% if ( bronces) { %>
                                        <p class="text-center">
                                            <%= bronces.length%>
                                        </p>
                                        <p class="text-center"></p>

                                        <%}else{ %>
                                            <p class="text-center">0</p>
                                            <%   } %>
                                </p>
                                <% if (bronces && bronces.length) { %>
                                    <ul>
                                        <% bronces.forEach((item) => { %>
                                            <li>
                                                <%= item.name %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                    <% } %>

                            </div>
                        </div>
                        <div class="row user-info">
                            <div class="col">Posible desc del usuario</div>
                        </div>
                    </div>
                </div>

</html>