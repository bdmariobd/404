<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/search_bar.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <!--     <link rel="stylesheet" href="/stylesheets/users.css">
 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&family=Quicksand:wght@700&display=swap" rel="stylesheet">
    <title>404</title>
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">


</head>
<header class="top-bar">


</header>

<body>
    <%- include ("fragments/navbar")%>
        <main>
            <div class="container title-container">
                <h3>
                    Usuarios
                </h3>
            </div>
            <div class="container subtitle-container">
                <h5>
                    <% if (_users.length ===0) { %>
                        No hay usuarios
                        <%= _users.length %> usuarios
                            <% } else if(_users.length ===1) { %>
                                1 usuario
                                <% } else { %>
                                    <%= _users.length %> usuarios
                                        <% } %>
                </h5>
                <a href="/preguntas/formular" class="btn">Formula tu pregunta</a>
            </div>
            <%- include ("fragments/search_bar_question") %>
                <%- include ("fragments/search_bar")%>
                    <% if(_users.length >0){ %>
                        <div class="container mt-5">
                            <div class="row row-cols-3 gx-5 gy-5">
                                <% _users.forEach(function(_user) { %>
                                    <div class="col">
                                        <div class="card">
                                            <img class="img mx-auto" id="profilePhoto" src="/users/imagen/<%= _user.id %> " alt="Foto de perfil">
                                            <div class="card-body">
                                                <h5 class="card-title text-center">
                                                    <a class="text-center" href="/users/<%= _user.id %>">
                                                        <%=   _user.name %>
                                                    </a>
                                                </h5>
                                                <h6 class="card-subtitle text-center">
                                                    <%= _user.reputation %>
                                                </h6>
                                                <% if (_user.tag_name!==null) { %>
                                                    <div class="d-flex justify-content-center">
                                                        <div class="tag-element ">
                                                            <a href="/preguntas/tag/<%=_user.tag_name%>">
                                                                <%=_user.tag_name%> <strong> x<%= _user.times %> </strong>
                                                            </a>
                                                        </div>
                                                    </div>

                                                    <% } %>


                                            </div>
                                        </div>
                                    </div>







                                    <% }); %>
                            </div>
                            <% }else{ %>
                                <div class="container d-flex flex-column justify-content-center align-items-center">
                                    <h3>Mono solitario...</h3>
                                    <img class="img-quote" src="https://live.staticflickr.com/4026/4298760927_b4abde8300_b.jpg" alt="No hay usuarios con ese nombre">
                                </div>
                                <% } %>

                        </div>
        </main>




</body>

</html>